body {
  font-family: Arial, sans-serif;
  background-color: #f7f9fc;
  margin: 0;
  padding: 0;
}

.cv-container {
  max-width: 900px;
  margin: auto;
  padding: 2rem;
  background-color: white;
  box-shadow: 0px 4px 20px rgba(0,0,0,0.1);
  border-radius: 10px;
}

header {
  border-bottom: 2px solid #eee;
  padding-bottom: 1rem;
  margin-bottom: 2rem;
}

h1 {
  font-size: 2rem;
  margin: 0;
  color: #1e3a8a;
}

h2 {
  margin-top: 2rem;
  color: #2563eb;
}

.section {
  margin-bottom: 1.5rem;
}

.contact-info {
  color: #555;
  font-size: 0.9rem;
}

ul {
  padding-left: 1.5rem;
}

li {
  margin-bottom: 0.5rem;
}
